<h2> <%= "Invoice for #{@service.property.name} # #{@service.id}" %></h2>

<ul>
<li><%="Employee Served:        #{@service.employee.name}"%> </li>
<li><%="Appointment:       #{@service.appointment.strftime(%m/%d/%Y)}"%> </li>
<li><%="Labor Cost:      $#{@service.service_cost}"%> </li>
<li><%="Material Cost:  $#{@service.materials_cost}"%> </li>
<li><%="Total Cost:    $#{@service.total}"%> </li>
<li><%="Paid:          #{humanize_boolean(@service.paid)}"%> </li>
<li><%="Description:          #{@service.job_description}"%> </li>
</ul>


