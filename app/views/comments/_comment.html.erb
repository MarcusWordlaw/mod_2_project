<% @comments.each do|comment|%>
    <p><%=" #{comment.client.username} commented: #{comment.reply} "%></p>
    <p><%= "last updated at #{comment.updated_at.httpdate}" %></p>
    
    <%= button_to "Delete comment", service_comment_path(comment.service.id, comment.id), method: :delete%>
    <%= link_to "Edit Comment", edit_service_comment_path(comment.service.id, comment.id) %>
<%end%>

  